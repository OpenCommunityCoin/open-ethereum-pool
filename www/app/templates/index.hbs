{{#if config.newMain}}
<section class="status">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 stat-holder">
        <div class="display">
          <div class="icon">
            <i class="fa fa-cube"></i>
          </div>
          <div class="number">
            <h3>{{t "home.blockheight"}}</h3>
            <div>
              <span>#{{format-number stats.height}}</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 stat-holder">
        <div class="display">
          <div class="icon">
            <i class="fa fa-hourglass-half"></i>
          </div>
          <div class="number">
            <h3>{{t "home.blocktime"}}</h3>
            <div>
              <span>{{format-number stats.blockTime}} s</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 stat-holder">
        <div class="display">
          <div class="icon">
            <i class="fa fa-tachometer"></i>
          </div>
          <div class="number">
            <h3>{{t "home.network_hashrate"}}</h3>
            <div>
              <span>{{format-hashrate stats.hashrate}}</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 stat-holder">
        <div class="display">
          <div class="icon">
            <i class="fa fa-puzzle-piece"></i>
          </div>
          <div class="number">
            <h3>{{t "home.difficulty"}}</h3>
            <div>
              <span>{{with-metric-prefix stats.difficulty}}</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 stat-holder">
        <div class="display">
          <div class="icon">
            <i class="fa fa-users"></i>
          </div>
          <div class="number">
            <h3>{{t "home.miners"}}</h3>
            <div>
              <span>{{format-number stats.model.minersTotal}}</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 stat-holder">
        <div class="display">
          <div class="icon">
            <i class="fa fa-clock-o"></i>
          </div>
          <div class="number">
            <h3>{{t "home.lastfound"}}</h3>
            <div>
              {{#if stats.model.stats.lastBlockFound}}
              <span>{{seconds-to-rel stats.model.stats.lastBlockFound}}</span>
              {{else}}
              <span>{{t "home.no_block_found"}}</span>
              {{/if}}
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 stat-holder">
        <div class="display">
          <div class="icon">
            <i class="fa fa-tachometer"></i>
          </div>
          <div class="number">
            <h3>{{t "home.pool_hashrate"}}</h3>
            <div>
              <span>{{format-hashrate stats.model.hashrate}}</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 stat-holder">
        <div class="display">
          <div class="icon">
            <i class="fa fa-percent"></i>
          </div>
          <div class="number">
            <h3>{{t "home.round_luck"}}</h3>
            <div>
              <span>{{format-number stats.roundVariance style='percent'}}</span>
            </div>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 info-holder">
        <div class="item">
          <div class="desc">
            <h3>{{t "home.blockreward"}}</h3>
            <p>
              {{format-number stats.blockReward}} {{config.Unit}}
            </p>
          </div>
        </div>
        <div class="item">
          <div class="desc">
            <h3>{{t "home.pool_fee"}}</h3>
            <p>
              {{PoolFee}}
            </p>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 info-holder">
        <div class="item">
          <div class="desc">
            <h3>{{t "home.min_payout_threshold_html" htmlSafe=true}}</h3>
            <p>
              {{PayoutThreshold}} {{config.Unit}}
            </p>
          </div>
        </div>
        <div class="item">
          <div class="desc">
            <h3>{{t "home.payout_interval"}}</h3>
            <p>
              {{PayoutInterval}}
            </p>
          </div>
        </div>
      </div>

      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 info-holder">
        <div class="item0">
          <div class="icon">
            <h3 class="label label-success">PROP</h3>
          </div>
          <div class="desc">
            <p>
              {{t "home.payout_scheme_detail"}}
            </p>
          </div>
        </div>
      </div>

{{#if config.priceShowAll}}
      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 info-holder">
        <div class="item">
          <div class="desc">
            <h3>
            <span class="icon">
              <i class="fa fa-bitcoin"></i>
            </span>
            {{t "home.price"}}</h3>
            <p>
              {{format-number satPrice}} sat
            </p>
          </div>
        </div>
        <div class="item">
          <div class="desc">
            <h3>{{t "home.price"}}</h3>
            <p>
              <span id="currentPrice">{{coinPrice}}</span>
              <ul class="currency">
                <li>
                  <a class="currency-item dropdown-toggle" data-toggle="dropdown" id="selectedCurrency">
                  {{selectedSymbol}}
                  <b class="caret"></b></a>
                  <ul class="dropdown-menu dropdown-menu-right">
                    {{#each-in currencies as |currency symbol|}}
                    <li><a href="#" {{action 'selectCurrency' currency on='click'}}>{{currency}} ({{symbol}})</a></li>
                    {{/each-in}}
                  </ul>
                </li>
              </ul>
            </p>
          </div>
        </div>
      </div>
{{/if}}
{{#if config.priceShowBtc}}
      <div class="col-lg-3 col-md-3 col-sm-6 col-xs-6 stat-holder">
        <div class="display">
          <div class="icon">
            <i class="fa fa-bitcoin"></i>
          </div>
          <div class="number">
            <h3>{{t "home.price"}}</h3>
            <div>
              <span>{{format-number satPrice}} sat</span>
            </div>
          </div>
        </div>
      </div>
{{/if}}
    </div>
  </div>
</section>
{{/if}}
{{#if config.legacyMain}}
<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <h1 style="font-size: 24px">
          <strong>{{config.PoolTitle}}</strong>
        </h1>
        <strong>{{t "home.min_payout_threshold"}}: {{PayoutThreshold}} {{config.Unit}}</strong> / {{t "home.payouts_run" interval=PayoutInterval}}<br/>
        <span class="label label-success">PROP</span> {{t "home.payout_scheme_detail"}}
      </div>
      <div class="col-md-3 stats">
        <div><i class="fa fa-users"></i> {{t "home.miners_online"}}: <span id="poolHashrate">{{format-number stats.model.minersTotal}}</span></div>
        <div><i class="fa fa-tachometer"></i> {{t "home.pool_hashrate"}}: <span id="poolHashrate">{{format-hashrate stats.model.hashrate}}</span></div>
        <div><i class="fa fa-money"></i> {{t "home.pool_fee"}}: <span id="poolFee" class="label label-success">{{PoolFee}}</span></div>
        {{#if stats.model.stats.lastBlockFound}}
        <div><i class="fa fa-clock-o"></i> {{t "home.last_block_found"}}: <span>{{format-relative (seconds-to-ms stats.model.stats.lastBlockFound)}}</span></div>
        {{/if}}
      </div>
      <div class="col-md-4 stats">
        <div><i class="fa fa-unlock-alt"></i> {{t "home.network_difficulty"}}: <span>{{with-metric-prefix stats.difficulty}}</span></div>
        <div><i class="fa fa-tachometer"></i> {{t "home.network_hashrate"}}: <span>{{format-hashrate stats.hashrate}}</span></div>
        <div><i class="fa fa-bars"></i> {{t "home.blockchain_height"}}: <span>{{format-number stats.height}}</span></div>
        <div><i class="fa fa-clock-o"></i> {{t "home.current_round_variance"}}: <span>{{format-number stats.roundVariance style='percent'}}</span></div>
      </div>
    </div>
  </div>
</div>
{{/if}}
{{#if config.highcharts.main.enabled}}
<section class="main-chart">
  <div class="container">
  {{high-charts mode=chartMode chartOptions=chartOptions content=chartData}}
  </div>
</section>
{{/if}}

<div class="container">
  <div class="stats">
    <h3>{{t "home.query_history"}}</h3>
    <div class="input-group">
      {{input value=cachedLogin class="form-control" placeholder=(t "home.input.enter_your_wallet_address")}}
      <span class="input-group-btn">
        <button class="btn btn-primary" type="button" {{action 'lookup' cachedLogin}}>
          <span style="display: inline;"><i class="fa fa-search"></i> {{t "home.button.lookup"}}</span>
        </button>
      </span>
    </div>
  </div>

  {{partial (t "home.help.minimal")}}
</div>
